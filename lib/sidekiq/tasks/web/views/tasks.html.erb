<header class="row">
  <div class="col-sm-5">
    <h1>
      <%= t("tasks") %>
    </h1>
  </div>
</header>

<% if @tasks.empty? %>
  <%= t("no_tasks") %>
<% else %>
  <table class="table table-hover table-bordered table-striped table-white">
    <thead>
      <tr>
        <th><%= t("name") %></th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td>
            <a href="<%= task_url(root_path, task) %>">
              <b><%= task.name %></b>
            </a>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
